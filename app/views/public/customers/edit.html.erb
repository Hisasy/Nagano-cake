<h2>編集ページ</h2>

<%= form_with model:@customer, url:customer_path(@customer),method: :patch, local:true do |f| %>
  <p>氏名</p><%= f.text_field :last_name %><%= f.text_field :first_name %>
  <p>カナ</p><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
  <p>郵便番号</p><%= f.text_field :postal_code %>
  <p>住所</p><%= f.text_field :address %>
  <p>電話番号</p></p><%= f.text_field :telephone_number %>
  <p>メールアドレス</p><%= f.email_field :email %>
  <%= f.submit "編集内容を保存" %>
<% end %>

<%= link_to "退会する", customers_quit_path %>